#include <stdio.h>

typedef struct {
    int dato;
} Nodo;

int main() {
    Nodo n1;      // Un nodo normal
    Nodo *p;      // Un puntero a Nodo
    p = &n1;      // 'p' apunta a 'n1'

    // 1) Guardar el valor 10 en 'dato' usando n1
    
    n1.dato = 10;   //UTILIZAMOS "." YA QUE N1 ES UN STRUCT NORMAL

    // 2) Guardar el valor 20 en 'dato' usando p
  
    p->dato = 20;   // uTILIZAMOS "->" YA QUE P ES UN APUNTADOR HACIA EL STRUCT
    
    // 3) Imprimir el contenido de 'dato' con n1
    
    printf("%d\n", n1.dato);   // UTILIZAMOS "." PARA QUE NOS IMPRIMA CORRECTAMENTE
    
    // 4) Imprimir el contenido de 'dato' con p
    
    printf("%d\n", p->dato);   //UTILIZAMOS "->" PARA QUE NOS IMPRIMA CORRECTAMENTE EL APUNTADOR
   
    return 0;
}
